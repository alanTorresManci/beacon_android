<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#fff"
    android:id="@+id/back"
    android:weightSum="1">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <ImageView
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:id="@+id/imageView"
        android:background="@drawable/bwlogo"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Inicia Sesión"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:autoText="false"
        android:textStyle="bold" />

    <EditText
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Usuario"
        android:id="@+id/usuario"
        android:layout_gravity="center_horizontal"
        android:layout_margin="0.2dp"
        android:background="@drawable/abc_edit_text_material" />

    <EditText
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Contraseña"
        android:id="@+id/contraseña"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/abc_edit_text_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Log In"
        android:id="@+id/login_click"
        android:layout_gravity="center_horizontal"
        android:linksClickable="true"
        android:textColorLink="#fff"
        android:textColor="@color/com_facebook_blue" />

    <EditText
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Nombre"
        android:id="@+id/nombre_crear"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Correo Electrónico"
        android:ems="10"
        android:id="@+id/email_crear"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Contraseña"
        android:ems="10"
        android:id="@+id/contraseña_crear"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Sexo"
        android:id="@+id/sexo_crear"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:hint="Fecha de nacimiento"
        android:id="@+id/fecha_crear"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/registrar_normal"
        android:text="Registrar"
        android:layout_gravity="center_horizontal"
        android:linksClickable="true"
        android:textColorLink="#fff"
        android:textColor="@color/com_facebook_blue" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.69"></LinearLayout>

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="13dp"
        android:id="@+id/imageButton"
        android:background="@drawable/facebooklogo"
        android:layout_weight="0.40"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar con Facebook"
        android:id="@+id/crear_facebook"
        android:layout_gravity="center_horizontal" />


</LinearLayout>